<div class="container py-4">
    <h2 class="text-center mb-4">Ajouter / Modifier un Type de Bien</h2>
    <div class="card shadow p-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="mb-3">
            {{ form_label(form.nomType, 'Nom du Type de Bien', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nomType, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nomType) }}
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle pe-2"></i> Retour
            </a>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
