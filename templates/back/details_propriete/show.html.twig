{% extends 'baseBack.html.twig' %}

{% block title %}Détails de la Propriété{% endblock %}

{% block style %}
<style>
.card {
    border-radius: 10px;
    overflow: hidden;
}

.card-header {
    font-size: 1.5rem;
    font-weight: bold;
}

.table th {
    width: 30%;
    font-weight: bold;
    color: #555;
}

.table td {
    color: #333;
}

.btn i {
    margin-right: 5px;
}
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h1 class="text-center">Détails de la Propriété</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
          
                    <tr>
                        <th class="text-end">Nom de la Propriété </th>
                        <th class="text-start">Valeur de la Propriété </th>
                    </tr>
                    
                </thead>
                <tbody>
                    {% for detail in details_proprietes %}
                        <tr>
                            <td class="text-end">{{ propriete.nomPropriete }}</td>
                            <td>{{ detail.valeurPropriete }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <div>
                <a href="#" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
