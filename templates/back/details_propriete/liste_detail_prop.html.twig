{% extends 'baseBack.html.twig' %}

{% block title %}Gestion des Détails des Propriétés{% endblock %}

{% block body %}
    <div class="container-fluid bg-light p-4" style="border: 5px solid #1C2D37;">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-header-left">
                        <h3>
                            <small>Liste des Détails des Propriétés</small>
                        </h3>
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- Breadcrumb start -->
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                <i class="fa fa-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Détails Propriétés</li>
                    </ol>
                    <!-- Breadcrumb end -->
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-light p-4 mt-4">
        <div class="dashboard-panel border bg-white rounded overflow-hidden w-100">
            <div class="overflow-x-scroll font-fifteen">
                <table class="w-100 items-list bg-transparent">
                    <thead>
                        <tr class="bg-white">
                            <th>ID</th>
                            <th>Valeur de la Propriété</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for details_propriete in details_proprietes %}
                            <tr>
                                <td>{{ details_propriete.id }}</td>
                                <td>{{ details_propriete.valeurPropriete }}</td>
                                <td>
                                    <a href="{{ path('app_details_propriete_show', {'id': details_propriete.id}) }}" class="text-primary me-2">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_details_propriete_edit', {'id': details_propriete.id}) }}" class="text-success me-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ path('app_details_propriete_delete', {'id': details_propriete.id}) }}" method="post" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ details_propriete.id) }}">
                                        <button type="submit" class="btn btn-link text-danger p-0">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_details_propriete_new') }}" class="btn btn-primary">Créer un nouveau détail de propriété</a>
        </div>
    </div>
{% endblock %}
