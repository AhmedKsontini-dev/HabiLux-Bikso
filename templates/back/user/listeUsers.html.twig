{% extends 'baseBack.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid bg-light p-4" style="border: 5px solid #1C2D37;">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-header-left">
                        <h3>
                            <small>Liste des Utilisateurs</small>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-light p-4 mt-4">
        <div class="dashboard-panel border bg-white rounded overflow-hidden w-100">
            <!-- Conteneur avec défilement horizontal -->
            <div style="overflow-x: auto; width: 100%; max-width: 100%;">
                <table class="w-100 items-list bg-transparent" style="min-width: 1200px;">
                    <thead>
                        <tr class="bg-white">
                            <th>ID</th>
                            <th>Photo de Profil</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Roles</th>
                            <th>Vérifié</th>
                            
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>
                                    {% if user.photoProfil is defined and user.photoProfil is not empty %}
                                        <img src="{{ asset('uploads/photo_profil/' ~ user.photoProfil) }}" alt="Photo de Profil" width="50">
                                    {% else %}
                                        <span>Aucune photo de profil</span>
                                    {% endif %}
                                </td>

                                <td>{{ user.nom }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.tel }}</td>
                                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                <td>
                                    {% if user.verifier %}
                                        <span class="badge bg-success">Vérifié</span>
                                    {% else %}
                                        <span class="badge bg-danger">Non vérifié</span>
                                    {% endif %}
                                </td>

                               
                                <td>
                                    <div class="dropdown">
                                        <a href="#" class="text-dark" role="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-info-circle"></i><!-- Icône de trois points verticale (ou remplace par une flèche si besoin) -->
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                            <li>
                                                <a class="dropdown-item text-primary" href="{{ path('app_back_user_show', {'id': user.id}) }}">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item text-success" href="{{ path('app_back_user_edit', {'id': user.id}) }}">
                                                    <i class="fas fa-edit"></i> Modifier
                                                </a>
                                            </li>
                                            <li>
                                                <form action="{{ path('app_back_user_delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button type="submit" class="dropdown-item text-danger">
                                                        <i class="fas fa-trash"></i> Supprimer
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>


                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10" class="text-center">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
