{% extends 'baseBack.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid bg-light p-4" style="border: 5px solid #1C2D37;">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-header-left">
                        <h3>
                            <small>Liste des Utilisateurs</small>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-light p-4 mt-4">
        <div class="dashboard-panel border bg-white rounded overflow-hidden w-100">
            <!-- Conteneur avec défilement horizontal -->
            <div style="overflow-x: auto; width: 100%; max-width: 100%;">
                <table class="w-100 items-list bg-transparent" style="min-width: 1200px;">
                    <thead>
                        <tr class="bg-white">
                            <th>ID</th>
                            <th>Photo de Profil</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Roles</th>
                            <th>Vérifié</th>
                            
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>
                                    {% if user.photoProfil is defined and user.photoProfil is not empty %}
                                        <img src="{{ asset('uploads/photo_profil/' ~ user.photoProfil) }}" alt="Photo de Profil" width="50">
                                    {% else %}
                                        <span>Aucune photo de profil</span>
                                    {% endif %}
                                </td>

                                <td>{{ user.nom }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.tel }}</td>
                                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                <td>{{ user.verifier ? 'Oui' : 'Non' }}</td>
                               
                                <td>
                                    <a href="{{ path('app_back_user_show', {'id': user.id}) }}" class="text-primary me-2" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="text-success me-2" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ path('app_back_user_delete', {'id': user.id}) }}" method="post" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button type="submit" class="btn btn-link text-danger p-0" title="Supprimer">
                                            <i class="fas fa-trash"></i> 
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10" class="text-center">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
