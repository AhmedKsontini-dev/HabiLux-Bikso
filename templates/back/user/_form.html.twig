                {{ form_label(form.photoProfil, 'Photo de profil', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.photoProfil, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.photoProfil) }}
            </div>
        </div>

       

        <div class="d-flex justify-content-between mt-3">
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle pe-2"></i> Retour
            </a>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
