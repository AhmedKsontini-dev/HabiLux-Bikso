{% extends 'baseBack.html.twig' %}

{% block title %}HabiLux - Détails de l'Utilisateur{% endblock %}

{% block style %}
<style>
.card {
    border-radius: 10px;
    overflow: hidden;
}

.card-header {
        font-size: 2rem;
        font-weight: bold;
        background: linear-gradient(45deg, #1C2D37, #2E495A);
        padding: 15px;
        text-align: center;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.table th {
    width: 30%;
    font-weight: bold;
    color: #555;
}

.table td {
    color: #333;
}

.btn i {
    margin-right: 5px;
}
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h1 class="text-center" style="color:white;">Détails de l'Utilisateur</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <!-- Informations Générales -->
                    <tr>
                        <th class="text-start">Photo Profil :</th>
                        <td>
                            {% if user.photoProfil is defined and user.photoProfil is not empty %}
                                <img src="{{ asset('uploads/photo_profil/' ~ user.photoProfil) }}" alt="Photo de Profil" width="30%">
                            {% else %}
                                <span>Aucune photo de profil</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="text-start">ID :</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Nom :</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Prenom :</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Email :</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Tel :</th>
                        <td>{{ user.tel }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">CIN :</th>
                        <td>{{ user.cin }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Localisation :</th>
                        <td>{{ user.localisation }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Adresse :</th>
                        <td>{{ user.adresse }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Expérience :</th>
                        <td>{{ user.experience is not empty ? user.experience : '----' }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Description :</th>
                        <td>{{ user.description is not empty ? user.description : '----' }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Poste(s) :</th>
                        <td>{{ user.poste ? user.poste|join(', ') : '----' }}</td>

                    </tr>

                   
                    <tr>
                        <th class="text-start">Roles :</th>
                        <td>
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="badge" style="background-color: #DFB266FF; color: white; padding: 5px 10px; border-radius: 5px;">
                                            Admin
                                </span>
                            {% else %}
                                <span class="badge" style="background-color: #78A6C7FF; color: white; padding: 5px 10px; border-radius: 5px;">
                                            Client
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="text-start">Vérifier :</th>
                        <td>
                            {% if user.verifier %}
                                <span class="badge bg-success">Vérifié</span>
                            {% else %}
                                <span class="badge bg-danger">Non vérifié</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="text-start">Date d'inscription :</th>
                        <td>{{ user.creeEn|date('Y-m-d') }}</td>
                    </tr>

                    <!-- Séparation avec un titre "Réseaux Sociaux" -->
                    <tr><td colspan="2" class="text-center font-weight-bold">Réseaux Sociaux</td></tr>
                    <tr>
                        <th class="text-start">Instagram :</th>
                        <td>{{ user.instagram is not empty ? user.instagram : '----' }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Facebook :</th>
                        <td>{{ user.facebook is not empty ? user.facebook : '----' }}</td>
                    </tr>
                    <tr>
                        <th class="text-start">Linkedin :</th>
                        <td>{{ user.linkedin is not empty ? user.linkedin : '----' }}</td>
                    </tr>

                  
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_back_user_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <div>
                <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
