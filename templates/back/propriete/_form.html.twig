<div class="container py-4">
    <h2 class="text-center mb-4">Ajouter / Modifier une Propriété</h2>
    <div class="card shadow p-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="mb-3">
            {{ form_label(form.nomPropriete, 'Nom de la Propriété', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nomPropriete, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nomPropriete) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.type, 'Type de Bien', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a href="javascript:history.back()" class="btn btn-secondary">Retour</a>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
