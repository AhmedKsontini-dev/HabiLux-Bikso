{% extends 'baseFront.html.twig' %}

{% block title %}HabiLux-Propriétés{% endblock %}

{% block body %}

<style>
.property-thumb img {
    width: 475px;  /* Ajuste la largeur pour s'adapter au conteneur */
    height: 490px; /* Fixe une hauteur uniforme */
    object-fit: cover; /* Permet de conserver le rapport d'aspect et de remplir le cadre */
    border-radius: 30px; /* Optionnel : Ajoute des coins arrondis pour un meilleur rendu */
}

.user-photo {
    width: 50px; /* Taille de l'avatar */
    height: 50px; /* Taille de l'avatar */
    border-radius: 50%; /* Cette propriété rend l'image circulaire */
    object-fit: cover; /* Cette propriété ajuste l'image pour qu'elle remplisse complètement le cercle sans déformer l'image */
    border: 2px solid #fff; /* Optionnel : ajoute une bordure blanche autour de l'image */
    }

    .th-btn.style-border2.th-btn-icon i {
    color: #1C2D37; /* Couleur bleue par défaut */
    transition: color 0.3s ease-in-out; /* Animation fluide */
}

.th-btn.style-border2.th-btn-icon:hover i {
    color: white; /* Couleur blanche au survol */
}


</style>
    <div class="breadcumb-wrapper " data-bg-src="{{ asset('assetsFront/img/bg/breadcumb-bg.jpg') }}">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-9">
                    <div class="breadcumb-content">
                        <h1 class="breadcumb-title">Dêpot a louer</h1>
                        <ul class="breadcumb-menu">
                            <li><a href="{{ path('app_front_accueil_accueil') }}">Accueil</a></li>
                            <li>Propriétés</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!--==============================
Property Page Area
==============================-->
    <section class="space-top space-extra-bottom">
        <div class="container">
            <ul class="nav nav-tabs property-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <a href="{{ path('app_front_commercial_depot_louer') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_front_commercial_depot_louer' %}active{% endif %}">
                    Location
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a href="{{ path('app_front_commercial_depot_avendre') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_front_commercial_depot_avendre' %}active{% endif %}">
                    Achat
                </a>
            </li>
        </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="rent-tab-pane" role="tabpanel" aria-labelledby="rent-tab" tabindex="0">
                    <form class="property-search-form">
                        <label>Recherche de propriété</label>
                        <div class="form-group">
                            <i class="far fa-search"></i>
                            <input class="form-control" type="text" placeholder="ID de la liste ou emplacement">
                        </div>
                        <select class="form-select">
                            <option value="category" selected="selected">Catégorie</option>
                            <option value="luxury">Luxe</option>
                            <option value="commercial">Commercial</option>
                        </select>
                        <select class="form-select">
                            <option value="offer_type" selected="selected">Type d'offre</option>
                            <option value="popularity">Popularité</option>
                            <option value="rating">Note</option>
                            <option value="date">Derniers</option>
                        </select>
                        <button class="th-btn" type="submit"><i class="far fa-search"></i> Rechercher</button>
                    </form>
                </div>
                <div class="tab-pane fade" id="buy-tab-pane" role="tabpanel" aria-labelledby="buy-tab" tabindex="0">
                    <form class="property-search-form">
                        <label>Recherche de propriété</label>
                        <div class="form-group">
                            <i class="far fa-search"></i>
                            <input class="form-control" type="text" placeholder="ID de la liste ou emplacement">
                        </div>
                        <select class="form-select">
                            <option value="category" selected="selected">Catégorie</option>
                            <option value="luxury">Luxe</option>
                            <option value="commercial">Commercial</option>
                        </select>
                        <select class="form-select">
                            <option value="offer_type" selected="selected">Type d'offre</option>
                            <option value="popularity">Popularité</option>
                            <option value="rating">Note</option>
                            <option value="date">Derniers</option>
                        </select>
                        <button class="th-btn" type="submit"><i class="far fa-search"></i> Rechercher</button>
                    </form>
                </div>
            </div>
            <div class="th-sort-bar">
                <div class="row justify-content-between align-items-center">
                    <div class="col-md">
                        <p class="woocommerce-result-count">Affichage de 1 à 9 sur 16 résultats</p>
                    </div>

                    <div class="col-md-auto">
                        <div class="sorting-filter-wrap">
                            <form class="woocommerce-ordering" method="get">
                                <select name="orderby" class="orderby" aria-label="Ordre du magasin">
                                    <option value="menu_order" selected="selected">Tri par défaut</option>
                                    <option value="popularity">Trier par popularité</option>
                                    <option value="rating">Trier par note moyenne</option>
                                    <option value="date">Trier par date</option>
                                    <option value="price">Trier par prix : du moins cher au plus cher</option>
                                    <option value="price-desc">Trier par prix : du plus cher au moins cher</option>
                                </select>
                            </form>
                            <div class="nav" role="tablist">
                                <a class="active" href="#" id="tab-shop-list" data-bs-toggle="tab" data-bs-target="#tab-list" role="tab" aria-controls="tab-grid" aria-selected="false"><i class="fa-light fa-grid-2"></i></a>
                                <a href="#" id="tab-shop-grid" data-bs-toggle="tab" data-bs-target="#tab-grid" role="tab" aria-controls="tab-grid" aria-selected="true"><i class="fa-solid fa-list"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade active show" id="tab-list" role="tabpanel" aria-labelledby="tab-shop-list">
                    <div class="row gy-40">
                        {% for bien in biens %}
                            <div class="col-md-6 col-xl-4">
                                <div class="property-card2">
                                    <div class="property-card-thumb img-shine">
                                        <img src="{{ asset('uploads/images_bien/' ~ bien.imageBiens|first.nomImage) }}" alt="Image du bien">
                                    </div>
                                    <div class="property-card-details">
                                        <div class="media-left">
                                            <h4 class="property-card-title"><a href="property-details.html">{{ bien.nomBien }}</a></h4>
                                            <h5 class="property-card-price">{{ bien.afficherPrix ? bien.prixBien ~ ' DT' : 'Prix Privée' }}</h5>
                                            <p class="property-card-location">{{ bien.localisationBien }}</p>
                                        </div>
                                        <div class="btn-wrap">
                                            <a href="property-details.html" class="th-btn style-border2 th-btn-icon"><i class="fas fa-info-circle"></i>Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="tab-pane fade" id="tab-grid" role="tabpanel" aria-labelledby="tab-shop-grid">
                    {% for bien in biens %}
                        <div class="property-card-wrap style-dark">
                            <div class="property-thumb">
                                <img src="{{ asset('uploads/images_bien/' ~ bien.imageBiens|first.nomImage) }}" alt="Image du bien">
                            </div>
                            <div class="property-card style-dark">
                                <div class="property-card-number">
                                    {{ loop.index }}
                                </div>
                                <div class="property-card-details">
                                    <span class="property-card-subtitle">{{ bien.type.nomType }}</span>
                                    <h4 class="property-card-title">
                                        <a href="property-details.html">{{ bien.nomBien }}</a>
                                    </h4>
                                    <p class="property-card-text">
                                        {{ bien.description|length > 50 ? bien.description|slice(0, 50) ~ '...' : bien.description }}
                                    </p>
                                    
                                    <div class="property-card-meta">
                                        <span><i class="fas fa-money-bill-wave"></i>Prix:<br> {{ bien.afficherPrix ? bien.prixBien ~ 'DT' : 'Prix Privée' }}</span>
                                        
                                        <span><i class="fas fa-key"></i>Référence:<br> {{ bien.id }}</span>
                                        
                                        <span><i class="fas fa-map-marker-alt"></i>Adresse:<br> {{ bien.adresseBien }}</span>
                                    </div>

                                    <div class="property-btn-wrap">
                                        <img src="{{ asset('uploads/photo_profil/' ~ bien.publierPar.photoProfil) }}" alt="Photo de l'utilisateur" class="user-photo">
                                        <a><i class="fas fa-phone-alt"></i> {{ bien.publierPar.tel }}</a>
                                        <a href="property-details.html" class="th-btn style-border2 th-btn-icon">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>

                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>


            </div>
            <div class="mt-60 text-center">
                <div class="th-pagination ">
                    <ul>
                        <!-- <li><a class="prev-page" href="blog.html"><i class="far fa-arrow-left me-2"></i>Previous</a></li> -->
                        <li><a class="active" href="blog.html">1</a></li>
                        <li><a href="blog.html">2</a></li>
                        <li><a href="blog.html">3</a></li>
                        <li><a class="next-page" href="blog.html">Suivant<i class="far fa-arrow-right ms-2"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

